{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "CustomErrors": {
    "errors": [
      {
        "Type": "NotFound",
        "Message": "",
        "HttpStatuscode": 404
      },
      {
        "Type": "BadRequest",
        "Message": "One or more validation errors occurred.",
        "HttpStatuscode": 400
      },
      {
        "Type": "InternalServerError",
        "Message": "",
        "HttpStatuscode": 500
      }
    ]
  },
  "CustomMessages": {
    "MaxPaginationSize": "2000"
  }
}
